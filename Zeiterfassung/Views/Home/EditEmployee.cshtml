@model Zeiterfassung_Domain.Employee

@{
    ViewBag.Title = "EditEmployee";
}
@{
    var data = ViewBag.Message;
}



<h1 class="display-3">Neuen Benutzer anlegen</h1>


<div class="row">
    <div class="col-lg-3">
        <p>
            <h2>Anmeldung</h2>
            @using (Html.BeginForm("UpdateEmployee", "DB"))
            {
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Vor- und Nachname", @type = "text" })
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email-Adresse", @type = "email" })



                @Html.HiddenFor(m => m.Password)
                @Html.HiddenFor(m => m.Admin)
                @Html.HiddenFor(m => m.EmployeeNumber)

                <input type="submit" name="Login" value="Enter" class="btn btn-primary btn-lg btn-block" />
            }

</div>


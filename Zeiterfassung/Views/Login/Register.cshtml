@model Zeiterfassung_Domain.Employee

@{
    ViewBag.Title = "Register";
}
@{ 
    string sentMessage = ViewBag.Message;
}

<h1 class="display-4">Neuen Benutzer anlegen</h1>

<div class="row">
    <div class="col-lg-3">
        <p>
            <h2>Anmeldung</h2>
            @using (Html.BeginForm("InsertEmployees", "Home"))
            {
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Vor- und Nachname", @type = "text" })
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.GivenEmail, new { @class = "form-control", @placeholder = "Email-Adresse", @type = "email" })
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Passwort", @type = "password" })

                if (sentMessage != null) { 
                    <p>@sentMessage</p>
                }
                
                @Html.LabelFor(m => m.RepeatPassword)
                @Html.TextBoxFor(m => m.RepeatPassword, new { @class = "form-control", @placeholder = "Passwort wiederholen", @type = "password" })
                <br />
                <div style="font-size:10px;">Alle Felder sind auszufüllen!</div>
                <br />


                <input type="submit" name="Login" value="Enter" class="btn btn-primary btn-lg btn-block" />
            }
        </p>
    </div>
    <div class="col-lg-3">
        <div class="alert alert-danger" role="alert">
            @Html.ValidationMessageFor(m => m.Name) <br />
            @Html.ValidationMessageFor(m => m.Email) <br />
            @Html.ValidationMessageFor(m => m.Password) <br />
            @Html.ValidationMessageFor(m => m.RepeatPassword) <br />
        </div>
    </div>
</div>

